# editorconfig.org
root = true

[*]
charset = utf-8
curly_bracket_next_line = false
end_of_line = lf
indent_brace_style = BSD KNF
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
spaces_around_brackets = outside
spaces_around_operators = true
quote_type = double
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{*.ts,*.tsx}]
indent_size = 4
max_line_length = 100
